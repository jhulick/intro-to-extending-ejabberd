{
  "limits": {
    "limits": [
      ["*", "soft", "nofile", "10240"]
    ]
  },
  "erlang": {
    "source": {
      "url": "https://s3.amazonaws.com/rn-public/erlang/otp_src_R15B01.tar.gz"
    }
  },
  "sysctl": {
    "params": {
      "fs": {
        "file-max": 805939
      }
    }
  },
  "bash_profile": {
    "users": ["vagrant"]
  },
  "packages": [
    "git",
    "vim",
    "emacs",
    "curl",
    "screen",
    "libexpat1-dev"
  ],
  "local-jabber-cluster": {
    "users": [
        {"name": "vagrant"}
    ]
  },
  "rvm": {
    "user_installs": [
      {"user":         "vagrant",
       "default_ruby": "ree-1.8.7-2012.02",
       "install_rubies": true,
       "rubies":       ["1.8.7", "1.9.3"] }
    ]
  },
  "run_list": [
    "recipe[sysctl]",
    "recipe[limits]",
    "recipe[packages]",
    "recipe[erlang::source]",
    "recipe[ejabberd]",
    "recipe[bash_profile]",
    "recipe[local-jabber-cluster]",
    "recipe[rvm::user]"
  ]
}
